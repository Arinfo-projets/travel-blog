<div class="mb-5 d-flex flex-wrap">
    {% for image in post.images %}
    <figure style="width: 100px; height: 100px;" class="me-3 position-relative">
        <img width="100%" height="100%" style="object-fit: cover;" class="rounded"
            src="{{ asset('assets/images/post/') ~ image.filePath }}" alt="image">
        <span class="position-absolute start-0 bottom-0">
            {{ include('image/_delete_form.html.twig') }}
        </span>
    </figure>
    {% endfor %}
</div>
{{ form_start(form) }}
{{ form_widget(form) }}

<button class="btn btn-primary">{{ button_label|default('Save') }}</button>

{{ form_end(form) }}